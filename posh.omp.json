{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palettes": {
        "template": "{{if eq .Shell \"pwsh\"}}pwsh-palette{{else}}bash-palette{{end}}",
        "list": {
            "bash-palette": {
                "main": "#161b50",
                "main-text": "#e6c541",
                "white": "#fff",
                "git-blue": "#3A96DD"
            },
            "pwsh-palette": {
                "main": "#754b81",
                "main-text": "#ffffff",
                "white": "#fff",
                "git-blue": "#3A96DD"
            }
        }
    },
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "p:white",
                    "style": "diamond",
                    "type": "os",
                    "template": " {{.Icon}}  "
                },
                {
                    "foreground": "p:main-text",
                    "properties": {
                        "folder_separator_icon": " \ue0b1",
                        "home_icon": "~",
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "<p:main,transparent>\ue285</><transparent,p:main>\ue0b0</><foreground,p:main> \uea83 {{ .Path }} </><p:main,transparent>\ue0b0</>",
                    "type": "path"
                },
                {
                    "foreground": "p:white",
                    "properties": {
                        "branch_max_length": 0,
                        "branch_icon": " \uf418 ",
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "plain",
                    "template": "<transparent,p:git-blue>\ue0b0</><foreground,p:git-blue>{{if .UpstreamIcon}} {{ .UpstreamIcon }}{{end}}<i>{{.HEAD}}<i/> </><p:git-blue,transparent>\ue0b0</>",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "type": "prompt",
            "newline": true,
            "segments": [
                {
                    "style": "plain",
                    "type": "text",
                    "template": "{{if matchP \"pwsh\" .Shell}}â¯{{else}}${{end}}"
                }
            ]
        }
    ],
    "console_title_template": "{{if matchP \"pwsh\" .Shell}}PowerShell{{else}}Git Bash{{end}} > {{ .Folder }}",
    "final_space": true,
    "version": 2
}
