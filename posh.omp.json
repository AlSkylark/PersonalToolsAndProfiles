{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palette": {
        "yellow": "#692f53",
        "black": "#000",
        "white": "#fff",
        "git-blue": "#007cb6"
    },
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "background": "p:black",
                    "foreground": "p:white",
                    "style": "diamond",
                    "type": "os",
                    "template": " {{.Icon}}  "
                },
                {
                    "background": "p:yellow",
                    "foreground": "p:white",
                    "properties": {
                        "folder_separator_icon": " \ue0b1",
                        "home_icon": "~",
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "<p:yellow,p:black>\ue285</><p:black, p:yellow>\ue0b0</> \uea83 {{ .Path }} <p:yellow,p:black>\ue0b0</>",
                    "type": "path"
                },
                {
                    "background": "p:git-blue",
                    "foreground": "p:white",
                    "properties": {
                        "branch_max_length": 25,
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "plain",
                    "template": "<p:black,p:git-blue>\ue0b0</> {{ .UpstreamIcon }}{{ .HEAD }} <p:git-blue,p:black>\ue0b0</>",
                    "type": "git"
                }
            ],
            "type": "prompt"
        }
    ],
    "console_title_template": "Git Bash > {{ .Folder }}",
    "final_space": true,
    "version": 2
}
